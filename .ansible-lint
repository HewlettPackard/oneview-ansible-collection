# .ansible-lint
exclude_paths:
- .github/
# parseable: true
# quiet: true
# verbosity: 1

use_default_rules: true

# This makes linter to fully ignore rules/tags listed below
skip_list:
  - meta-no-info
  - meta-no-tags
  - empty-string-compare
  - var-spacing
  - unnamed-task
  - risky-file-permissions
  - role-name
